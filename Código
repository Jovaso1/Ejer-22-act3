Clase:
package ejer.pkg22.act3;
/**
 *
 * @author USER
 */
public class Salario {
    public static double calcsalario(double sal_hora, double horas_trab){
    double sal_mes;
    sal_mes = sal_hora*horas_trab;
    return sal_mes;   
}  
}
