    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        txtnombre.setText("");
        txtsalario.setText("");
        txthoras.setText("");
        txtnombre1.setText("");
        txtsalariomes.setText("");
    }                                        

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        double sal_hora, sal_mes, horas_trab;
        String nombre;
        
        nombre = String.valueOf(txtnombre.getText());        
        sal_hora = Double.parseDouble(txtsalario.getText());
        horas_trab = Double.parseDouble(txthoras.getText());
        sal_mes = Salario.calcsalario(sal_hora, horas_trab);       
        
        if (sal_mes > 450000){
            txtnombre1.setText(nombre);
            txtsalariomes.setText(String.valueOf(sal_mes));
        }else{
            txtnombre1.setText(nombre);

        }
    }                                        

